@page "/deploy/build/list"
@using FOPS.Abstract.K8S.Entity
@using FOPS.Abstract.K8S.Enum
@using FOPS.Abstract.K8S.Server
@using FOPS.Abstract.MetaInfo.Entity
@using FOPS.Abstract.MetaInfo.Server
@inject IIocManager _iocManager;
@inject NavigationManager nav;
@inject IJSRuntime js;

<div class="layui-card">
    <div class="layui-card-header" id="anchor-play-header">
        构建
        <select @bind="_selectClusterId" style="display:inline;">
            @foreach (var clusterVO in _lstCluster)
            {
                <option value="@clusterVO.Id">@clusterVO.RuntimeEnvType 环境 @clusterVO.Name</option>
            }
        </select>
        <div class="layui-right">
            <button class="layui-btn layui-btn-danger" @onclick="DeployAsync"><i class="am-icon-plus"></i> 全部构建</button>
        </div>
    </div>
    <div class="layui-card-body">
        <div class="layui-form layui-border-box layui-table-view" lay-filter="LAY-table-1" style="">
            <div class="layui-table-box">
                <div class="layui-table-header">
                    <table cellspacing="0" cellpadding="0" border="0" class="layui-table" lay-skin="auto" lay-size="sm">
                        <thead>
                        <tr>
                            <th data-field="ID" data-key="14-0-0">
                                <div class="layui-table-cell laytable-cell-14-0-0">
                                    <span>ID</span>
                                </div>
                            </th>
                            <th data-field="Type" data-key="14-0-1">
                                <div class="layui-table-cell laytable-cell-14-0-1">
                                    <span>项目名称</span>
                                </div>
                            </th>
                            <th data-field="Type" data-key="14-0-2">
                                <div class="layui-table-cell laytable-cell-14-0-2">
                                    <span>git版本</span>
                                </div>
                            </th>
                            @foreach (var clusterVO in _lstCluster)
                            {
                                <th data-field="Type" data-key="14-0-3">
                                    <div class="layui-table-cell laytable-cell-14-0-3">
                                        <span>[@clusterVO.RuntimeEnvType.ToString()] @clusterVO.Name</span>
                                    </div>
                                </th>
                            }
                            <th data-field="Type" data-key="14-0-5">
                                <div class="layui-table-cell laytable-cell-14-0-5">
                                    <span>上次成功</span>
                                </div>
                            </th>
                            <th data-field="Type" data-key="14-0-6">
                                <div class="layui-table-cell laytable-cell-14-0-6">
                                    <span>上次失败</span>
                                </div>
                            </th>
                            <th data-field="Type" data-key="14-0-7">
                                <div class="layui-table-cell laytable-cell-14-0-7">
                                    <span>操作</span>
                                </div>
                            </th>
                        </tr>
                        </thead>
                    </table>
                </div>
                <div class="layui-table-body layui-table-main">
                    <table cellspacing="0" cellpadding="0" border="0" class="layui-table" lay-skin="auto" lay-size="sm">
                        <tbody>
                        @for (var index = 0; index < _lst.Count; index++)
                        {
                            var info = _lst[index];
                            <tr data-index="@index">
                                <td>
                                    <div class="layui-table-cell laytable-cell-14-0-0"> @info.Id</div>
                                </td>
                                <td data-field="Title" data-key="14-0-1">
                                    <div class="layui-table-cell laytable-cell-14-0-1">
                                        <a href="/deploy/build/update/@info.Id">@info.Name</a>
                                    </div>
                                </td>
                                <td data-field="Title" data-key="14-0-2">
                                    <div class="layui-table-cell laytable-cell-14-0-2">
                                        当前：akfnz32fax <br/>
                                        线上：FDj8dnaaxi
                                    </div>
                                </td>
                                @foreach (var clusterVO in _lstCluster)
                                {
                                    <td data-field="Title" data-key="14-0-3">
                                        <div class="layui-table-cell laytable-cell-14-0-3">
                                            仓库：68<br/>
                                            K8S：69
                                        </div>
                                    </td>
                                }
                                <td data-field="Title" data-key="14-0-5">
                                    <div class="layui-table-cell laytable-cell-14-0-5">
                                        2021-05-18 02:09:19
                                    </div>
                                </td>
                                <td data-field="Title" data-key="14-0-6">
                                    <div class="layui-table-cell laytable-cell-14-0-6">
                                        2021-05-18 02:09:19
                                    </div>
                                </td>
                                <td data-field="Title" data-key="14-0-7">
                                    <div class="layui-table-cell laytable-cell-14-0-7">
                                        <button class="layui-btn layui-btn-sm layui-btn-danger">编译打包</button>
                                        <button class="layui-btn layui-btn-sm layui-btn-danger">部署K8S</button>
                                        <button class="layui-btn layui-btn-sm layui-btn-danger">全部构建</button>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <PageSplit PageIndex="1" PageSize="@_pageSize" TotalCount="@_totalCount" PageUrl="/deploy/build/list/{index}"></PageSplit>
        </div>
    </div>
</div>
<style>
    .laytable-cell-14-0-0{ width: 80px; }
    .laytable-cell-14-0-1{ width: 150px; }
    .laytable-cell-14-0-2{ width: 150px; }
    .laytable-cell-14-0-3{ width: 120px; }
    .laytable-cell-14-0-4{ width: 120px; }
    .laytable-cell-14-0-5{ width: 150px; }
    .laytable-cell-14-0-6{ width: 150px; }
    .laytable-cell-14-0-7{ width: 350px; }
</style>

@code{

    private int _totalCount;
    private int _pageSize = 999;

    private List<ProjectVO> _lst = new();
    private List<YamlTplVO> _lstTpl = new();
    private List<ClusterVO> _lstCluster = new();
    private int _selectClusterId;

    protected override async Task OnInitializedAsync()
    {
        _lst = await _iocManager.Resolve<IProjectService>().ToListAsync();
        _lst = _lst.OrderByDescending(o => o.Id).ToList();
        _totalCount = _lst.Count;

    // 模板
        _lstTpl = await _iocManager.Resolve<IYamlTplService>().ToListAsync();
        _lstTpl = _lstTpl.OrderByDescending(o => o.Id).ToList();

    // 集群
        _lstCluster = await _iocManager.Resolve<IClusterService>().ToListAsync();
        _lstCluster = _lstCluster.OrderByDescending(o => o.Id).ToList();
        if (_lstCluster != null) _selectClusterId = _lstCluster[0].Id;
    }

    private async Task Save(int id)
    {
        var projectVO = _lst.Find(o => o.Id == id);
        await _iocManager.Resolve<IProjectService>().UpdateAsync(id, projectVO);
        await js.InvokeVoidAsync("layer.alert", "保存成功", new {icon = 1});
    }

    private async Task DeployAsync()
    {
        var load = await js.InvokeAsync<int>("layer.load", 0, "{shade: false}");
        var clusterVO = _lstCluster.Find(o => o.Id == _selectClusterId);
        if (clusterVO == null)
        {
            await js.InvokeVoidAsync("layer.alert", "请先选择集群环境", new {icon = 0});
            return;
        }

        var deployService = _iocManager.Resolve<IDeployService>();
        try
        {
            var runShellResult = await deployService.DeployAsync(_lst, clusterVO, _lstTpl);
            var output = string.Join("<br />", runShellResult.Output);
            if (runShellResult.IsError) await js.InvokeVoidAsync("layer.alert", output, new {icon = 2, title = "出错了"});
            else await js.InvokeVoidAsync("layer.alert", output, new {icon = 1, title = "执行结果"});
        }
        catch (Exception e)
        {
            await js.InvokeVoidAsync("layer.alert", e.Message, new {icon = 2, title = "出错了"});
        }
        await js.InvokeVoidAsync("layer.close", load);
    }

    private async Task DeployAsync(int id)
    {
        var load = await js.InvokeAsync<int>("layer.load", 0, "{shade: false}");
        var clusterVO = _lstCluster.Find(o => o.Id == _selectClusterId);
        if (clusterVO == null)
        {
            await js.InvokeVoidAsync("layer.alert", "请先选择集群环境", new {icon = 0});
            return;
        }

        var projectVO = _lst.Find(o => o.Id == id);
        if (projectVO == null)
        {
            await js.InvokeVoidAsync("layer.alert", "项目不存在", new {icon = 0});
            return;
        }

        var deployService = _iocManager.Resolve<IDeployService>();
        try
        {
            var runShellResult = await deployService.DeployAsync(projectVO, clusterVO, _lstTpl);
            if (runShellResult.IsError) await js.InvokeVoidAsync("layer.alert", runShellResult.Output, new {icon = 2, title = "出错了"});
            else await js.InvokeVoidAsync("layer.alert", runShellResult.Output, new {icon = 1, title = "执行结果"});
        }
        catch (Exception e)
        {
            await js.InvokeVoidAsync("layer.alert", e.Message, new {icon = 2, title = "出错了"});
        }
        await js.InvokeVoidAsync("layer.close", load);
    }

}