@page "/k8s/single/deploy"
@using FOPS.Application.Build.Cluster
@using FOPS.Application.Build.Cluster.Entity
@using FOPS.Application.Build
@using FS.Extends

@inject NavigationManager Nav;
@inject IJSRuntime Js;
@inject ClusterApp ClusterApp;
@inject KubectlSetYamlApp KubectlSetYamlApp;

<div class="layui-card">
    <div class="layui-card-header">
        Single发布
        <select @bind="_selectClusterId" style="display:inline;">
            @foreach (var clusterVO in _lstCluster)
            {
                <option value="@clusterVO.Id">@clusterVO.Name - @clusterVO.RuntimeEnvType</option>
            }
        </select>
        <div class="layui-right">
            <button class="layui-btn" @onclick="GotoList"><i class="am-icon-plus"></i> 列表</button>
        </div>
    </div>
    <div class="layui-card-body" style="padding: 15px;">
        <div class="layui-form-item">
            <label class="layui-form-label">自定义变量</label>
            <div class="layui-input-block">
                <textarea @bind="_yaml" placeholder="Yaml内容" class="layui-textarea" style="margin-top: 0; margin-bottom: 0; height: 600px;"></textarea>
            </div>
        </div>
        <div class="layui-form-item layui-layout-admin">
            <div class="layui-input-block">
                <div class="layui-footer" style="left: 0;">
                    <button class="layui-btn" @onclick="DeployAsync">发布</button>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
.layui-form-label {
    width: 120px;
}
</style>

@code{

    private List<ClusterDTO> _lstCluster = new();
    private int _selectClusterId;
    private string _yaml;
    private bool _isFirst;

    protected override async Task OnInitializedAsync()
    {
        if (_isFirst) return;
        _isFirst = true;

    // 集群
        _lstCluster = await ClusterApp.ToListAsync() ?? new();
        if (_lstCluster.Count > 0) _selectClusterId = _lstCluster[0].Id;
    }

    private async Task DeployAsync()
    {
        var load = await Js.InvokeAsync<int>("layer.load", 0, "{shade: false}");
        var clusterVO = _lstCluster.Find(o => o.Id == _selectClusterId);
        if (clusterVO == null)
        {
            await Js.InvokeVoidAsync("layer.alert", "请先选择集群环境", new
            {
                icon = 0
            });
            return;
        }

        try
        {
            var lstLog = new List<string>();
            var progress = new Progress<string>(log =>
            {
                lstLog.Add(log);
            });

            var execSuccess = await KubectlSetYamlApp.DeployAsync(clusterVO, _yaml, progress);
            if (!execSuccess)
                await Js.InvokeVoidAsync("layer.alert", lstLog.ToString("<br />"), new
                {
                    icon = 2,
                    title = "出错了"
                });
            else
                await Js.InvokeVoidAsync("layer.msg", lstLog.ToString("<br />"), new
                {
                    icon = 1,
                    title = "执行结果"
                });
        }
        catch (Exception e)
        {
            await Js.InvokeVoidAsync("layer.alert", e.Message, new
            {
                icon = 2,
                title = "出错了"
            });
        }
        await Js.InvokeVoidAsync("layer.close", load);
    }

    private void GotoList()
    {
        Nav.NavigateTo("/k8s/deploy/list");
    }

}